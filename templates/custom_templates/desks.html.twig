{% extends './base.html.twig' %}

{% block body %}
    <div>
        {% include 'custom_templates/navbar.html.twig' %}
    </div>

    <div class="center-content">
        <h2 style="font-family: 'Arial', sans-serif; font-size: 24px;">Date of reservation in room <span
                    style="color: #579e2f">{{ roomName }}</span> for {{ date }}</h2>

    </div>
    <div class="room-list">
        <ul>
            <div class="row">
                {% for desk in desks %}
                    <form method="post" action="{{ path('deskReservation') }}">
                        <input type="hidden" name="date" value="{{ date }}">
                        <input type="hidden" name="roomName" value="{{ roomName }}">
                        <input type="hidden" name="deskId" value="{{ desk.id }}">
                        <input type="hidden" name="usersName" value="{{ usersName }}">
                        <button class="desk-btn" type="submit">
                            <li class="rooms" style="background-image: url('{{ asset('images/' ~ desk.image) }}');height: 250px; background-size: cover;">
                                <h3>{{ desk.id }}</h3>
                            </li>
                        </button>
                    </form>
                {% endfor %}
            </div>
        </ul>
    </div>




{% endblock %}
