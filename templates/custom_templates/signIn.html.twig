{% extends './base.html.twig' %}
        {% block body %}
            {{ parent() }}
            <style>
                /* Add space between input elements */
                /* styles.css */
                body {
                    font-family: Arial, sans-serif;
                    background-color: #f4f4f4;
                    margin: 0;
                    padding: 0;
                }

                .container {
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    height: 90vh;
                }

                .content {
                    width: 30%; /* Set the width you desire */
                }

                .form-container {
                    margin-top: 25px;
                    background-color: #fff;
                    padding: 20px;
                    border-radius: 5px;
                    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
                }

                h1 {
                    text-align: center;
                }

                form {
                    text-align: center;
                }

                input {
                    width: 80%;
                    padding: 10px;
                    margin: 10px 0;
                    border: 1px solid #ccc;
                    border-radius: 5px;
                }

                button {
                    width: 30%;
                    padding: 10px;
                    margin: 3% 0 3% 55%;
                    background-color: #45a049;
                    color: #fff;
                    border: 1px solid #45a049;
                    border-radius: 5px;
                    cursor: pointer;
                    font-size: 16px; /* Adjust the font size as needed */
                    font-family: 'Arial', sans-serif; /* Change the font family */
                }

                button:hover {
                    color: #45a049;
                    background-color: #fff;
                    border: 1px solid #45a049; /* Add the red border */
                }

                .alert-container {
                    margin-bottom: 25px;
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    height: 2vh; /* This will center messages vertically on the screen */
                }
                .alert {
                    background-color: #12b538; /* Red background color */
                    color: #fff; /* White text color */
                    padding: 10px 20px;
                    border-radius: 5px;
                    text-align: center;
                    font-size: 20px;
                }
            </style>

            <div class="container">
                <div class="content">
                    <div class="form-container">
                        <h1>Sign in</h1>
                        <form method="post" action="{{ path('home') }}">
                            <input type="email" name="signInEmail" placeholder="Your email">
                            <input type="password" name="signInPassword" placeholder="Your password"><br>
                            <a href="/login">I need an account</a>
                            <button class="btn btn-success successButton" title="Sign in" type="submit"> Sign
                                in
                            </button>
                        </form>
                    </div>
                    <form class="forgetPassword" method="post">
                        <button class="forgetPasswordButton" type="submit"><a href="">Forgotten password?</a></button>
                    </form>
                </div>
            </div>
            <div class="alert-container">
                {% for flashType, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ flashType }}">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>

            <script>
                document.addEventListener('DOMContentLoaded', function () {
                    var alerts = document.querySelectorAll('.alert');
                    setTimeout(function () {
                        alerts.forEach(function (alert) {
                            alert.style.display = 'none';
                        });
                    }, 5000); // 5000 milliseconds (5 seconds)
                });
            </script>

        {% endblock %}
